SELECT NOW(); -- 현재 시각 출력
SELECT CURRENT_DATE(); -- NOW()를 년월일까지만 출력
SELECT EXTRACT(MONTH FROM "2021-01-01");
SELECT DAY("2021-01-13");
SELECT DATE_ADD("2021-01-01", INTERVAL 7 DAY);
SELECT DATE_SUB("2017-06-15", INTERVAL 7 DAY);
SELECT DATEDIFF("2017-06-25", "2017-06-15");
SELECT TIMEDIFF("2021-01-25 12:10:00", "2021-01-25 10:10:00"); -- 시간의 차이 출력
SELECT DATE_FORMAT(NOW(), "%Y-%m-%d %p"); -- 날짜 형식 지정
